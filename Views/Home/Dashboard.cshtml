@model FitnessTracker.ViewModels.ActivitySummaryViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-tachometer-alt text-primary"></i>
        Dashboard
        <small class="text-muted">Welcome back, @ViewBag.Username!</small>
    </h2>
    <div>
        <a asp-controller="Activities" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Log Activity
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Goal Progress Section -->
<div class="row mb-4">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-bullseye text-warning"></i>
                    Today's Progress
                </h5>
                <a asp-action="Goals" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-cog"></i> Update Goal
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h3 class="text-primary">@Model.TotalCaloriesBurned.ToString("F1")</h3>
                        <p class="text-muted mb-0">Calories Burned Today</p>
                    </div>
                    <div class="col-md-6">
                        <h3 class="text-warning">@Model.CalorieGoal</h3>
                        <p class="text-muted mb-0">Daily Goal</p>
                    </div>
                </div>
                
                <div class="mt-3">
                    <div class="d-flex justify-content-between mb-1">
                        <small>Progress</small>
                        <small>@Model.ProgressPercentage.ToString("F1")%</small>
                    </div>
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar @(Model.IsGoalAchieved ? "bg-success" : "bg-primary")" 
                             role="progressbar" 
                             style="width: @Math.Min(100, Model.ProgressPercentage)%">
                        </div>
                    </div>
                </div>
                
                @if (Model.IsGoalAchieved)
                {
                    <div class="alert alert-success mt-3 mb-0">
                        <i class="fas fa-trophy"></i> Congratulations! You've achieved your daily goal!
                    </div>
                }
                else
                {
                    <p class="mt-3 mb-0 text-muted">
                        <i class="fas fa-fire"></i>
                        @Model.RemainingCalories.ToString("F1") calories to go!
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-chart-pie text-info"></i>
                    Quick Stats
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>Activities Today:</strong> @Model.RecentActivities.Count
                </div>
                <div class="mb-3">
                    <strong>Most Active:</strong>
                    @if (Model.CountByActivity.Any())
                    {
                        var mostActive = Model.CountByActivity.OrderByDescending(x => x.Value).First();
                        <span class="badge bg-primary">@mostActive.Key (@mostActive.Value activities)</span>
                    }
                    else
                    {
                        <span class="text-muted">No activities yet</span>
                    }
                </div>
                <div>
                    <strong>Best Calorie Burn:</strong>
                    @if (Model.CaloriesByActivity.Any())
                    {
                        var bestBurn = Model.CaloriesByActivity.OrderByDescending(x => x.Value).First();
                        <span class="badge bg-success">@bestBurn.Key (@bestBurn.Value.ToString("F1") cal)</span>
                    }
                    else
                    {
                        <span class="text-muted">No activities yet</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activities Section -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-clock text-success"></i>
            Today's Activities
        </h5>
        <a asp-controller="Activities" asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-list"></i> View All
        </a>
    </div>
    <div class="card-body">
        @if (Model.RecentActivities.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Activity</th>
                            <th>Metrics</th>
                            <th>Calories</th>
                            <th>Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var activity in Model.RecentActivities.Take(5))
                        {
                            <tr>
                                <td>
                                    <i class="fas fa-running text-primary"></i>
                                    @activity.ActivityType
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @activity.Metric1Label: @activity.Metric1.ToString("F1")<br/>
                                        @activity.Metric2Label: @activity.Metric2.ToString("F1")<br/>
                                        @activity.Metric3Label: @activity.Metric3.ToString("F1")
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-success">@activity.CaloriesBurned.ToString("F1") cal</span>
                                </td>
                                <td>
                                    <small class="text-muted">@activity.RecordedAt.ToString("HH:mm")</small>
                                </td>
                                <td>
                                    <a asp-controller="Activities" asp-action="Details" asp-route-id="@activity.Id" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-plus-circle fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No activities recorded today</h5>
                <p class="text-muted">Start tracking your fitness journey!</p>
                <a asp-controller="Activities" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Log Your First Activity
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh progress every 30 seconds if there are activities
        @if (Model.RecentActivities.Any())
        {
            <text>
            setInterval(function() {
                // You could implement real-time updates here
                // For now, just refresh the page every 5 minutes
            }, 300000);
            </text>
        }
    </script>
}
